{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "baseUrl": "./",
    "rootDir": "src/js",
    "paths": {
      "@/*": ["src/js/*"],
      "_@/*": ["./"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
