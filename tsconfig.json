{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "allowJs": true,
    "strict": true,
    "rootDir": "src/js",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/js/*"]
    },
    "lib": ["es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
